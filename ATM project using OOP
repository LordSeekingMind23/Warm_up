#use OOP 
class Account: 
    def __init__(self):
        self.balance=0# set the account balance at 0
    
    def deposit(self, amount):#defined the module as deposit
        
        if not isinstance(amount, int):#set some criteria for deposit
            raise ValueError("Deposit amount must be an integer")
        if amount <= 0:
            raise ValueError("Deposit amount must be positive")
        if amount > 10000:
            raise ValueError("Deposit amount exceeds the limit of 10,000")
        
        self.balance += amount#adding the amount to the balance


    def withdraw(self, amount):#defined the module as withdraw

        if amount <= 0:#set some criteria for withdraw as well
            raise ValueError("Withdrawal amount must be positive")
        if amount > self.balance:
            raise ValueError("Insufficient funds for withdrawal")
        if amount >10000: 
            raise ValueError("Withdrawal amount exceeds the limit of 10,000")
        
        self.balance -= amount#subtracting the amount from the balance

    def get_balance(self):#show the balance
        return self.balance

class Client: 
    def __init__(self, name):
        self.name = name
        self.account = Account()


    
